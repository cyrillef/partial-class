{
	"compilerOptions": {
		"target": "es2020",
		"types": ["node"],
		"composite": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true,
		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"removeComments": true
	},
	"include": [
	],
	"exclude": [
		"**/node_modules/*",
		"bin",
		"bin-sample"
	]
}